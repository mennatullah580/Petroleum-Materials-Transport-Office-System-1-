@page
@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>تسجيل الدخول - نظام نقل المواد البترولية</title>
    <style>
        body {
            margin: 0;
            font-family: 'Cairo', sans-serif;
            background: #e0edf7;
        }

        .container {
            width: 70%;
            margin: 60px auto;
            display: flex;
            background: #d2e0ea;
            border-radius: 10px;
            padding: 40px;
        }

        .left-box {
            background: #000b39;
            color: white;
            min-width: 250px;
            padding: 60px 30px;
            border-radius: 15px;
            font-size: 35px;
            font-weight: bold;
            line-height: 1.3;
            text-align: right;
        }

        .login-box {
            flex: 1;
            background: #2c3e50;
            margin-right: 40px;
            padding: 40px;
            border-radius: 15px;
            color: white;
        }

            .login-box h2 {
                text-align: center;
                margin-bottom: 20px;
                font-size: 32px;
            }

        label {
            display: block;
            margin: 10px 0 5px;
            font-size: 14px;
        }

        input {
            width: 80%;
            padding: 10px;
            border-radius: 20px;
            border: none;
            margin-bottom: 15px;
            font-size: 15px;
            direction: rtl;
        }

        .btn {
            padding: 10px 30px;
            background: white;
            color: #2c3e50;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-box">
            احلم.<br>
            خطّط.<br>
            افعل.
        </div>
        <div class="login-box">
            <h2>تسجيل الدخول</h2>
            <div asp-validation-summary="All" style="color: red;"></div>
            <form method="post">
                <label>الرقم الوظيفي</label>
                <input type="text" asp-for="Input.ID" required />
                <label>اسم المستخدم</label>
                <input type="text" asp-for="Input.Username" required />
                <label>كلمة المرور</label>
                <input type="password" asp-for="Input.Password" required />
                <br /><br />
                <button class="btn" type="submit">دخول</button>
            </form>
        </div>
    </div>
</body>
</html>