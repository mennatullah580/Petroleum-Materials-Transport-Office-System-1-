@page
@model Petroleum_Materials_Transport_Office_System.Pages.Master_Lists.StakeholdersModel
@{
    ViewData["Title"] = "إدارة الجهات المعنية";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إدارة الجهات المعنية</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --color-navy: #2F4156;
            --color-teal: #567C8D;
            --color-sky-blue: #C8D9E6;
            --color-beige: #F5EFEB;
            --color-white: #FFFFFF;
        }

        body {
            background-color: var(--color-sky-blue);
            font-family: 'Cairo', sans-serif;
            padding: 20px;
        }

        .master-card {
            background-color: var(--color-teal);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            min-height: 80vh;
        }

        .page-header {
            color: var(--color-white);
            margin-bottom: 25px;
            border-bottom: 2px solid rgba(255,255,255,0.2);
            padding-bottom: 15px;
        }

        .nav-pills .nav-link {
            background-color: rgba(255,255,255,0.2);
            color: var(--color-white);
            margin-left: 10px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .nav-pills .nav-link.active {
                background-color: var(--color-beige);
                color: var(--color-navy);
                transform: translateY(-2px);
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            }

            .nav-pills .nav-link:hover:not(.active) {
                background-color: rgba(255,255,255,0.4);
            }

        .content-area {
            background-color: var(--color-beige);
            border-radius: 12px;
            padding: 25px;
            margin-top: 20px;
            border: 1px solid rgba(0,0,0,0.05);
        }

        .filter-box {
            background-color: var(--color-navy);
            color: var(--color-white);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 25px;
        }

        .form-control, .form-select {
            border: none;
            border-radius: 6px;
        }

        .custom-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .custom-table thead {
                background-color: var(--color-navy);
                color: var(--color-white);
                white-space: nowrap;
            }

            .custom-table th, .custom-table td {
                padding: 12px 15px;
                border-bottom: 1px solid #ddd;
                text-align: center;
                vertical-align: middle;
            }

                .custom-table th:first-child {
                    border-top-right-radius: 8px;
                }

                .custom-table th:last-child {
                    border-top-left-radius: 8px;
                }

            .custom-table tbody tr:hover {
                background-color: #e9e2de;
                cursor: pointer;
            }

        /* الأزرار */
        .btn-action {
            background-color: var(--color-teal);
            color: white;
            border: none;
            padding: 5px 15px;
            border-radius: 5px;
            font-size: 0.9em;
            transition: background-color 0.3s;
        }

            .btn-action:hover {
                background-color: var(--color-navy);
                color: white;
            }

        .btn-search {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }

        /* إعدادات الطباعة */
        @@media print {
            body

        {
            background-color: white;
        }

        .master-card {
            background-color: white;
            box-shadow: none;
            padding: 0;
        }

        .filter-box, .nav-pills, .no-print {
            display: none !important;
        }

        .content-area {
            border: none;
            padding: 0;
        }

        .custom-table th {
            background-color: #ddd !important;
            color: black !important;
        }

        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="master-card">

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> خطأ في قاعدة البيانات</h4>
                    <p>@Model.ErrorMessage</p>
                </div>
            }

            <div class="d-flex justify-content-between align-items-center page-header">
                <div>
                    <h2 class="m-0"><i class="fas fa-users ms-2"></i> إدارة الجهات المعنية</h2>
                    <small class="text-white-50">العملاء، الموردين، والمقاولين</small>
                </div>
                <div>
                    <button class="btn btn-light no-print" onclick="window.print()">
                        <i class="fas fa-print ms-1"></i> طباعة القائمة
                    </button>
                </div>
            </div>

            <ul class="nav nav-pills mb-3 no-print" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ActiveTab == "clients" ? "active" : "")"
                            id="pills-clients-tab"
                            data-bs-toggle="pill"
                            data-bs-target="#pills-clients"
                            type="button" role="tab">
                        <i class="fas fa-building ms-1"></i> العملاء
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ActiveTab == "suppliers" ? "active" : "")"
                            id="pills-suppliers-tab"
                            data-bs-toggle="pill"
                            data-bs-target="#pills-suppliers"
                            type="button" role="tab">
                        <i class="fas fa-industry ms-1"></i> الموردين
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ActiveTab == "contractors" ? "active" : "")"
                            id="pills-contractors-tab"
                            data-bs-toggle="pill"
                            data-bs-target="#pills-contractors"
                            type="button" role="tab">
                        <i class="fas fa-truck-moving ms-1"></i> المقاولين
                    </button>
                </li>
            </ul>

            <div class="content-area">
                <div class="tab-content" id="pills-tabContent">

                    <div class="tab-pane fade @(Model.ActiveTab == "clients" ? "show active" : "")" id="pills-clients" role="tabpanel">
                        <form method="get" class="filter-box row g-3 no-print">
                            <input type="hidden" name="ActiveTab" value="clients" />

                            <div class="col-md-3">
                                <label>بحث باسم العميل</label>
                                <input type="text" name="clientName" class="form-control" placeholder="" value="@Request.Query["clientName"]">
                            </div>
                            <div class="col-md-3">
                                <label>المنطقة</label>
                                <select name="clientRegion" class="form-select">
                                    <option value="">الكل</option>
                                </select>
                            </div>
                            <div class="col-md-2 align-self-end">
                                <button type="submit" class="btn btn-action btn-search w-100">بحث</button>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>كود العميل</th>
                                        <th>اسم العميل</th>
                                        <th>رقم الهاتف</th>
                                        <th>العنوان</th>
                                        <th>الرصيد الحالي</th>
                                        <th class="no-print">إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Clients != null && Model.Clients.Count > 0)
                                    {
                                        @foreach (var client in Model.Clients)
                                        {
                                            <tr>
                                                <td>@client.ClientId</td>
                                                <td>@client.Name</td>
                                                <td>@client.Phone</td>
                                                <td>@client.Address</td>
                                                <td class="@(client.CurrentBalance < 0 ? "text-danger" : "text-success") fw-bold">
                                                    @client.CurrentBalance.ToString("N2")
                                                </td>
                                                <td class="no-print">
                                                    <button class="btn btn-action btn-sm"><i class="fas fa-edit"></i> تعديل</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center py-3 text-muted">لا توجد بيانات عملاء</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="tab-pane fade @(Model.ActiveTab == "suppliers" ? "show active" : "")" id="pills-suppliers" role="tabpanel">
                        <form method="get" class="filter-box row g-3 no-print">
                            <input type="hidden" name="ActiveTab" value="suppliers" />

                            <div class="col-md-4">
                                <label>بحث باسم الشركة الموردة</label>
                                <input type="text" name="supplierName" class="form-control" placeholder="" value="@Request.Query["supplierName"]">
                            </div>
                            <div class="col-md-3">
                                <label>نوع المادة</label>
                                <select name="materialType" class="form-select">
                                    <option value="">الكل</option>
                                    @if (Model.AvailableFuelTypes != null)
                                    {
                                        @foreach (var type in Model.AvailableFuelTypes)
                                        {
                                            <option value="@type" selected="@(Request.Query["materialType"] == type)">@type</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2 align-self-end">
                                <button type="submit" class="btn btn-action btn-search w-100">بحث</button>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>كود الموقع</th>
                                        <th>اسم الموقع / المورد</th>
                                        <th>المواد المتوفرة (من السجل)</th>
                                        <th class="no-print">إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Suppliers != null && Model.Suppliers.Count > 0)
                                    {
                                        @foreach (var supplier in Model.Suppliers)
                                        {
                                            <tr>
                                                <td>@supplier.SupplierId</td>
                                                <td>@supplier.Name</td>
                                                <td>
                                                    @if (supplier.FuelType != "غير محدد")
                                                    {
                                                        <span class="badge bg-warning text-dark">@supplier.FuelType</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted small">لا توجد حركات سابقة</span>
                                                    }
                                                </td>
                                                <td class="no-print">
                                                    <button class="btn btn-action btn-sm"><i class="fas fa-edit"></i> تعديل</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center py-3 text-muted">لا توجد بيانات موردين</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="tab-pane fade @(Model.ActiveTab == "contractors" ? "show active" : "")" id="pills-contractors" role="tabpanel">
                        <form method="get" class="filter-box row g-3 no-print">
                            <input type="hidden" name="ActiveTab" value="contractors" />

                            <div class="col-md-3">
                                <label>اسم المقاول</label>
                                <input type="text" name="contractorName" class="form-control" placeholder="" value="@Request.Query["contractorName"]">
                            </div>
                            <div class="col-md-3">
                                <label>الحالة</label>
                                <select name="contractorStatus" class="form-select">
                                    <option value="">الكل</option>
                                    <option value="Active" selected="@(Request.Query["contractorStatus"] == "Active")">نشط</option>
                                    <option value="Inactive" selected="@(Request.Query["contractorStatus"] == "Inactive")">غير نشط</option>
                                </select>
                            </div>
                            <div class="col-md-2 align-self-end">
                                <button type="submit" class="btn btn-action btn-search w-100">بحث</button>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>كود المقاول</th>
                                        <th>اسم المقاول</th>
                                        <th>رقم الهاتف</th>
                                        <th>العنوان</th>
                                        <th>عدد الأوامر</th>
                                        <th>إجمالي الشغل</th>
                                        <th>إجمالي السلف</th>
                                        <th>إجمالي العهد</th>
                                        <th>الرصيد الصافي</th>
                                        <th>الحالة</th>
                                        <th class="no-print">إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Contractors != null && Model.Contractors.Count > 0)
                                    {
                                        @foreach (var contractor in Model.Contractors)
                                        {
                                            <tr>
                                                <td>@contractor.ContractorId</td>
                                                <td>@contractor.Name</td>
                                                <td>@contractor.Phone</td>
                                                <td>@contractor.Address</td>
                                                <td><span class="badge bg-secondary">@contractor.OrderCount</span></td>
                                                <td>@contractor.TotalWork.ToString("N2")</td>
                                                <td class="text-danger">@contractor.TotalAdvances.ToString("N2")</td>
                                                <td class="text-warning">@contractor.TotalCustody.ToString("N2")</td>
                                                <td class="fw-bold text-primary">@contractor.NetBalance.ToString("N2")</td>
                                                <td>
                                                    @if (contractor.Status == "Active")
                                                    {
                                                        <span class="badge bg-success">نشط</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">غير نشط</span>
                                                    }
                                                </td>
                                                <td class="no-print">
                                                    <button class="btn btn-action btn-sm"><i class="fas fa-edit"></i></button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="11" class="text-center py-3 text-muted">لا توجد بيانات مقاولين</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>