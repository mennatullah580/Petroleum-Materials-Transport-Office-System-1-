@page
@model Petroleum_Materials_Transport_Office_System.Pages.Master_Lists.ResourcesModel
@{
    ViewData["Title"] = "Resources";

    // LOGIC: Check which tab should be open. Default is 'vehicles'
    string activeTab = Model.ActiveTab ?? "vehicles";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إدارة الموارد | Resources</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        /* YOUR EXACT CSS - NO CHANGES */
        :root {
            --color-navy: #2F4156;
            --color-teal: #567C8D;
            --color-sky-blue: #C8D9E6;
            --color-beige: #F5EFEB;
            --color-white: #FFFFFF;
        }

        body {
            background-color: var(--color-sky-blue);
            font-family: 'Cairo', sans-serif;
            padding: 20px;
        }

        .master-card {
            background-color: var(--color-teal);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            min-height: 80vh;
        }

        .page-header {
            color: var(--color-white);
            margin-bottom: 25px;
            border-bottom: 2px solid rgba(255,255,255,0.2);
            padding-bottom: 15px;
        }

        .nav-pills .nav-link {
            background-color: rgba(255,255,255,0.2);
            color: var(--color-white);
            margin-left: 10px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .nav-pills .nav-link.active {
                background-color: var(--color-beige);
                color: var(--color-navy);
                transform: translateY(-2px);
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            }

            .nav-pills .nav-link:hover:not(.active) {
                background-color: rgba(255,255,255,0.4);
            }

        .content-area {
            background-color: var(--color-beige);
            border-radius: 12px;
            padding: 25px;
            margin-top: 20px;
            border: 1px solid rgba(0,0,0,0.05);
        }

        .filter-box {
            background-color: var(--color-navy);
            color: var(--color-white);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 25px;
        }

        .form-control, .form-select {
            border: none;
            border-radius: 6px;
        }

        .custom-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .custom-table thead {
                background-color: var(--color-navy);
                color: var(--color-white);
            }

            .custom-table th, .custom-table td {
                padding: 12px 15px;
                border-bottom: 1px solid #ddd;
                text-align: center;
                vertical-align: middle;
            }

                .custom-table th:first-child {
                    border-top-right-radius: 8px;
                }

                .custom-table th:last-child {
                    border-top-left-radius: 8px;
                }

            .custom-table tbody tr:hover {
                background-color: #e9e2de;
                cursor: pointer;
            }

        .btn-action {
            background-color: var(--color-teal);
            color: white;
            border: none;
            padding: 5px 15px;
            border-radius: 5px;
            font-size: 0.9em;
            transition: background-color 0.3s;
        }

            .btn-action:hover {
                background-color: var(--color-navy);
                color: white;
            }

        .btn-search {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }

        @@media print {
            body {
                background-color: white;
            }

            .master-card {
                background-color: white;
                box-shadow: none;
                padding: 0;
            }

            .filter-box, .nav-pills, .no-print {
                display: none !important;
            }

            .content-area {
                border: none;
                padding: 0;
            }

            .custom-table th {
                background-color: #ddd !important;
                color: black !important;
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="master-card">

            <div class="d-flex justify-content-between align-items-center page-header">
                <div>
                    <h2 class="m-0"><i class="fas fa-truck-moving ms-2"></i> إدارة الموارد</h2>
                    <small class="text-white-50">التحكم في المركبات، السائقين، المخازن، والربط</small>
                </div>
                <div>
                    <button class="btn btn-light no-print" onclick="window.print()">
                        <i class="fas fa-print ms-1"></i> طباعة القائمة
                    </button>
                </div>
            </div>

            <ul class="nav nav-pills mb-3 no-print" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "vehicles" ? "active" : "")" id="pills-vehicles-tab" data-bs-toggle="pill" data-bs-target="#pills-vehicles" type="button" role="tab">
                        <i class="fas fa-truck ms-1"></i> المركبات
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "drivers" ? "active" : "")" id="pills-drivers-tab" data-bs-toggle="pill" data-bs-target="#pills-drivers" type="button" role="tab">
                        <i class="fas fa-id-card ms-1"></i> السائقين
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "warehouses" ? "active" : "")" id="pills-warehouses-tab" data-bs-toggle="pill" data-bs-target="#pills-warehouses" type="button" role="tab">
                        <i class="fas fa-warehouse ms-1"></i> المخازن
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "mapping" ? "active" : "")" id="pills-mapping-tab" data-bs-toggle="pill" data-bs-target="#pills-mapping" type="button" role="tab">
                        <i class="fas fa-link ms-1"></i> ربط المقاولين
                    </button>
                </li>
            </ul>

            <div class="content-area">
                <div class="tab-content" id="pills-tabContent">

                    <div class="tab-pane fade @(activeTab == "vehicles" ? "show active" : "")" id="pills-vehicles" role="tabpanel">

                        <form method="get" class="filter-box row g-3 no-print">
                            <input type="hidden" name="ActiveTab" value="vehicles" />
                            <div class="col-md-3">
                                <label>بحث برقم اللوحة / الكود</label>
                                <input type="text" name="VehicleSearch" value="@Model.VehicleSearch" class="form-control" placeholder="أدخل البيانات...">
                            </div>
                            <div class="col-md-3">
                                <label>الحالة</label>
                                <select name="VehicleStatus" class="form-select">
                                    <option value="الكل" selected="@(Model.VehicleStatus == "الكل")">الكل</option>
                                    <option value="نشط" selected="@(Model.VehicleStatus == "نشط")">نشط</option>
                                    <option value="صيانة" selected="@(Model.VehicleStatus == "صيانة")">صيانة</option>
                                </select>
                            </div>
                            <div class="col-md-2 align-self-end">
                                <button type="submit" class="btn btn-action btn-search w-100">بحث</button>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>كود المركبة</th>
                                        <th>رقم اللوحة</th>
                                        <th>الموديل / الماركة</th>
                                        <th>الحمولة (لتر)</th>
                                        <th>الحالة</th>
                                        <th class="no-print">إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Vehicles != null && Model.Vehicles.Count > 0)
                                    {
                                        @foreach (var item in Model.Vehicles)
                                        {
                                            <tr>
                                                <td>@item.VehicleCode</td>
                                                <td>@item.PlateNumber</td>
                                                <td>@item.Model</td>
                                                <td>@item.Capacity</td>
                                                <td>@item.Status</td>
                                                <td class="no-print">
                                                    <button class="btn btn-action btn-sm">تعديل</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="6" class="text-center">لا توجد بيانات</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="tab-pane fade @(activeTab == "drivers" ? "show active" : "")" id="pills-drivers" role="tabpanel">

                        <form method="get" class="filter-box row g-3 no-print">
                            <input type="hidden" name="ActiveTab" value="drivers" />
                            <div class="col-md-4">
                                <label>بحث باسم السائق</label>
                                <input type="text" name="DriverSearch" value="@Model.DriverSearch" class="form-control" placeholder="بحث...">
                            </div>
                            <div class="col-md-2 align-self-end">
                                <button type="submit" class="btn btn-action btn-search w-100">بحث</button>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>كود السائق</th>
                                        <th>الاسم الرباعي</th>
                                        <th>رقم الرخصة</th>
                                        <th>رقم الهاتف</th>
                                        <th>الحالة</th>
                                        <th class="no-print">إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Drivers != null && Model.Drivers.Count > 0)
                                    {
                                        @foreach (var item in Model.Drivers)
                                        {
                                            <tr>
                                                <td>@item.DriverCode</td>
                                                <td>@item.Name</td>
                                                <td>@item.LicenseNumber</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Status</td>
                                                <td class="no-print">
                                                    <button class="btn btn-action btn-sm">تعديل</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="6" class="text-center">لا توجد بيانات</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="tab-pane fade @(activeTab == "warehouses" ? "show active" : "")" id="pills-warehouses" role="tabpanel">

                        <form method="get" class="filter-box row g-3 no-print">
                            <input type="hidden" name="ActiveTab" value="warehouses" />
                            <div class="col-md-4">
                                <label>بحث عن مخزن</label>
                                <input type="text" name="WarehouseSearch" value="@Model.WarehouseSearch" class="form-control" placeholder="اسم المخزن...">
                            </div>
                            <div class="col-md-2 align-self-end">
                                <button type="submit" class="btn btn-action btn-search w-100">بحث</button>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>كود المخزن</th>
                                        <th>اسم المخزن</th>
                                        <th>الموقع / العنوان</th>
                                        <th>المشرف المسؤول</th>
                                        <th class="no-print">إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Warehouses != null && Model.Warehouses.Count > 0)
                                    {
                                        @foreach (var item in Model.Warehouses)
                                        {
                                            <tr>
                                                <td>@item.Code</td>
                                                <td>@item.Name</td>
                                                <td>@item.Location</td>
                                                <td>@item.Supervisor</td>
                                                <td class="no-print">
                                                    <button class="btn btn-action btn-sm">تعديل</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="5" class="text-center">لا توجد بيانات</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="tab-pane fade @(activeTab == "mapping" ? "show active" : "")" id="pills-mapping" role="tabpanel">

                        <form method="get" class="filter-box row g-3 no-print">
                            <input type="hidden" name="ActiveTab" value="mapping" />
                            <div class="col-md-3">
                                <label>المقاول</label>
                                <select name="MappingContractor" class="form-select" asp-items="@Model.ContractorsList">
                                    <option value="">اختر المقاول...</option>
                                </select>
                            </div>
                            <div class="col-md-3 align-self-end">
                                <button type="submit" class="btn btn-action btn-search w-100">عرض المركبات المرتبطة</button>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>رقم الربط</th>
                                        <th>اسم المقاول (المالك)</th>
                                        <th>رقم المركبة</th>
                                        <th>تاريخ البدء</th>
                                        <th>تاريخ الانتهاء</th>
                                        <th>الحالة</th>
                                        <th class="no-print">إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Mappings != null && Model.Mappings.Count > 0)
                                    {
                                        @foreach (Petroleum_Materials_Transport_Office_System.Pages.Master_Lists.ResourcesModel.MappingDto item in Model.Mappings)
                                        {
                                            <tr>
                                                <td>@item.LinkID</td>

                                                <td>@item.ContractorName</td>
                                                <td>@item.VehicleNumber</td>

                                                <td>@item.StartDate</td>
                                                <td>@item.EndDate</td>

                                                <td>@item.Status</td>
                                                <td class="no-print">
                                                    <button class="btn btn-action btn-sm">تعديل</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="7" class="text-center">لا توجد بيانات</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>