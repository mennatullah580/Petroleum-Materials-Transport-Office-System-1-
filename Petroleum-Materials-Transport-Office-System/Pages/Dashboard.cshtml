@page
@model DashboardModel
@using Microsoft.AspNetCore.Http
@{
    Layout = null;
    var userRole = HttpContext.Session?.GetString("Role");
    var userName = HttpContext.Session?.GetString("Name") ?? "مستخدم";

    // لو مفيش Session، ارجع للـ Login
    if (string.IsNullOrEmpty(userRole))
    {
        Response.Redirect("/Login");
        return;
    }
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>الصفحة الرئيسية - نظام نقل المواد البترولية</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Cairo', sans-serif;
            background: url('/images/trucks.jpg') center/cover no-repeat;
            min-height: 100vh;
        }

        .top-menu {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
        }

        .menu-box {
            background: white;
            padding: 10px 25px;
            display: flex;
            gap: 15px;
            border-radius: 30px;
            font-size: 14px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            align-items: center;
        }

        .user-info {
            background: white;
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: bold;
            color: #000b39;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .menu-box a.custom-link {
            text-decoration: none;
            color: #000b39;
            font-weight: bold;
            padding: 8px 15px;
            border-radius: 20px;
            transition: all 0.3s ease;
            display: inline-block;
        }

            .menu-box a.custom-link:hover {
                background: #667eea;
                color: white;
            }

        .custom-dropdown-toggle {
            text-decoration: none;
            color: #000b39;
            font-weight: bold;
            padding: 8px 15px;
            border-radius: 20px;
            transition: all 0.3s ease;
            background: none;
            border: none;
            font-family: 'Cairo', sans-serif;
            font-size: 14px;
        }

            .custom-dropdown-toggle:hover, .show > .custom-dropdown-toggle {
                background: #667eea;
                color: white;
            }

        .dropdown-menu {
            text-align: right;
            border-radius: 15px;
            border: none;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            margin-top: 10px !important;
        }

        .dropdown-item {
            font-family: 'Cairo', sans-serif;
            font-weight: 600;
            font-size: 13px;
            padding: 8px 20px;
        }

            .dropdown-item:hover {
                background-color: #f0f4f8;
                color: #667eea;
            }

        .title-text {
            text-align: right;
            margin: 220px 90px 0 0;
            color: white;
            font-size: 45px;
            font-weight: bold;
            line-height: 1.1;
            width: 500px;
            direction: rtl;
            text-shadow: 0 0 10px black;
        }

        .sub-text {
            color: white;
            font-size: 14px;
            margin-right: 90px;
            margin-top: 10px;
            width: 480px;
            text-shadow: 0 0 10px black;
            direction: rtl;
        }

        .logout-btn {
            margin-right: 90px;
            margin-top: 30px;
            padding: 10px 35px;
            background: white;
            border: none;
            border-radius: 20px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .logout-btn:hover {
                background: #ff4444;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(255,68,68,0.4);
            }
    </style>
</head>
<body>
    <div class="top-menu">
        <div class="user-info">
            مرحباً، @userName
        </div>
        <div class="menu-box">
            <a href="/Dashboard" class="custom-link">الرئيسية</a>

            @if (userRole == "Admin" || userRole == "Finance")
            {
                <div class="dropdown">
                    <button class="custom-dropdown-toggle dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        المالية
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Finance/Expenses">المصروفات</a></li>
                        <li><a class="dropdown-item" href="/Finance/Invoices">الفواتير</a></li>
                        <li><a class="dropdown-item" href="/Finance/Payments">المدفوعات</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Finance/Reports">التقارير المالية</a></li>
                    </ul>
                </div>
            }

            @if (userRole == "Admin")
            {
                <a href="#" class="custom-link">الدليل</a>
            }

            @if (userRole == "Admin" || userRole == "Operator")
            {
                <a href="/OrdersManagement" class="custom-link">الطلبات</a>
            }

            <a href="/AccountsManagement/AccountsManagement" class="custom-link">الحساب</a>

            @if (userRole == "Admin")
            {
                <div class="dropdown">
                    <button class="custom-dropdown-toggle dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        القائمة الرئيسية
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Master_Lists/Financial_Configuration">الإعدادات المالية</a></li>
                        <li><a class="dropdown-item" href="/Master_Lists/Fuel-Management">إدارة الوقود</a></li>
                        <li><a class="dropdown-item" href="/Master_Lists/Resources">الموارد</a></li>
                        <li><a class="dropdown-item" href="/Master_Lists/Stakeholders">أصحاب المصلحة</a></li>
                    </ul>
                </div>

                <div class="dropdown">
                    <button class="custom-dropdown-toggle dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        لوحة الإدارة
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/AdminPanel/UserManagement">إدارة المستخدمين</a></li>
                        <li><a class="dropdown-item" href="/AdminPanel/SystemLogs">سجلات النظام</a></li>
                        <li><a class="dropdown-item" href="/AdminPanel/EditUser">تعديل مستخدم</a></li>
                    </ul>
                </div>
            }

            @if (userRole == "Admin" || userRole == "Manager")
            {
                <a href="/Reports" class="custom-link">التقارير</a>
            }
        </div>
    </div>

    <div class="title-text">
        نوفّر النقل الآمن<br>
        والدقيق لمواد<br>
        الطاقة.
    </div>
    <div class="sub-text">
        نحن نشرف على عمليات نقل المواد البترولية وفق أعلى معايير السلامة
        والالتزام لضمان الكفاءة واستمرار الإمدادات.
    </div>
    <form method="post">
        <button class="logout-btn">تسجيل الخروج</button>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>