@page
@model Petroleum_Materials_Transport_Office_System.Pages.Finance.ReportsModel
@{
    Layout = null;
    ViewData["Title"] = "التقارير";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --navy: #2F4156;
            --teal: #567C8D;
            --beige: #F5EFEB;
            --sky-blue: #C8D9E6;
            --white: #FFFFFF;
        }

        body {
            background-color: var(--sky-blue);
            font-family: 'Cairo', sans-serif;
            margin: 0;
            padding: 20px;
            direction: rtl;
        }

        .main-wrapper {
            background: linear-gradient(135deg, var(--teal) 0%, #4a6b7c 100%);
            padding: 25px 25px 0 25px;
            border-radius: 20px;
            min-height: 85vh;
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
        }

        .tabs-nav {
            display: flex;
            gap: 5px;
            align-items: flex-end;
        }

        .tab-link {
            background-color: rgba(255,255,255,0.7);
            border: none;
            padding: 12px 30px;
            font-weight: 700;
            color: var(--navy);
            border-radius: 12px 12px 0 0;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: 0.3s;
        }

            .tab-link:hover {
                background-color: var(--white);
            }

            .tab-link.active-tab {
                background-color: var(--beige);
                padding-bottom: 20px;
                margin-bottom: -10px;
                z-index: 20;
                position: relative;
            }

        .content-card {
            background-color: var(--beige);
            padding: 35px;
            border-radius: 20px;
            min-height: 600px;
            position: relative;
            z-index: 5;
            margin-top: -1px;
        }

        .form-box {
            background-color: var(--navy);
            padding: 40px;
            border-radius: 20px;
            color: var(--white);
            max-width: 1100px;
            margin: 0 auto;
        }

        .report-select {
            padding: 16px;
            font-size: 16px;
            border-radius: 10px;
            width: 100%;
            font-family: 'Cairo';
            font-weight: bold;
            cursor: pointer;
        }

        .filters-container {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            padding: 25px;
            border-radius: 15px;
            margin-top: 30px;
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 40px;
        }

        .filter-group label {
            display: block;
            margin-bottom: 8px;
            color: #ddd;
            font-size: 14px;
        }

        .filter-group input, .filter-group select {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            border: none;
            font-family: 'Cairo';
        }

        .btn-generate {
            background-color: var(--teal);
            color: var(--white);
            padding: 15px 60px;
            border: none;
            border-radius: 10px;
            font-weight: bold;
            cursor: pointer;
            font-size: 18px;
            margin-top: 40px;
            width: 100%;
            max-width: 300px;
            transition: 0.3s;
        }

            .btn-generate:hover {
                background-color: #6a8d9e;
                transform: translateY(-3px);
            }

        .text-danger {
            color: #ff6b6b;
            font-size: 0.9em;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>
    <div class="main-wrapper">
        <div class="tabs-nav">
            <a href="/Finance/Invoices" class="tab-link"><i class="fa-solid fa-file-invoice"></i> الفواتير</a>
            <a href="/Finance/Payments" class="tab-link"><i class="fa-solid fa-money-bill-wave"></i> المدفوعات</a>
            <a href="/Finance/Expenses" class="tab-link"><i class="fa-solid fa-wallet"></i> المصروفات</a>
            <a href="/Finance/Reports" class="tab-link active-tab"><i class="fa-solid fa-chart-pie"></i> التقارير</a>
        </div>

        <div class="content-card">
            <div class="form-box">
                <h3 style="color:white; border-bottom:1px solid rgba(255,255,255,0.2); padding-bottom:15px; margin-bottom:30px;">
                    <i class="fa-solid fa-print"></i> استخراج التقارير
                </h3>

                <form method="post">
                    <div style="margin-bottom: 25px;">
                        <label class="report-main-label"><i class="fa-solid fa-list"></i> اختر نوع التقرير</label>
                        <select class="report-select" asp-for="Input.ReportType">
                            <option value="" disabled selected>-- اختر التقرير المطلوب --</option>
                            <option value="debts">ديون العملاء</option>
                            <option value="prov_bal">أرصدة المقاولين</option>
                            <option value="comp_acc">كشف حساب شامل</option>
                            <option value="prov_acc">حساب مقاولين</option>
                            <option value="shortage">بيان العجوزات</option>
                            <option value="profit">تقرير الأرباح</option>
                            <option value="movement">ملخص حركة مقاول</option>
                            <option value="fuel_sum">ملخص مالي حسب الوقود</option>
                            <option value="details">تقرير تفصيلي</option>
                        </select>
                        <span asp-validation-for="Input.ReportType" class="text-danger"></span>
                    </div>

                    <div class="filters-container">
                        <h4 class="filters-title"><i class="fa-solid fa-filter"></i> تصفية النتائج</h4>

                        <div class="filter-grid">
                            <div class="filter-group">
                                <label>من تاريخ (From)</label>
                                <input type="date" asp-for="Input.FromDate">
                            </div>
                            <div class="filter-group">
                                <label>إلى تاريخ (To)</label>
                                <input type="date" asp-for="Input.ToDate">
                            </div>
                            <div class="filter-group">
                                <label>نوع الوقود (Fuel)</label>
                                <select asp-for="Input.FuelId" asp-items="Model.FuelOptions">
                                    <option value="">الكل</option>
                                </select>
                            </div>
                            <div class="filter-group">
                                <label>العميل (Customer)</label>
                                <select asp-for="Input.CustomerId" asp-items="Model.CustomerOptions">
                                    <option value="">الكل</option>
                                </select>
                            </div>
                            <div class="filter-group">
                                <label>المقاول (Provider)</label>
                                <select asp-for="Input.ProviderId" asp-items="Model.ProviderOptions">
                                    <option value="">الكل</option>
                                </select>
                            </div>
                            <div class="filter-group">
                                <label>الموقع (Location)</label>
                                <select asp-for="Input.LocationCode" asp-items="Model.LocationOptions">
                                    <option value="">الكل</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div style="text-align: center;">
                        <button type="submit" class="btn-generate"><i class="fa-solid fa-file-export"></i> عرض التقرير</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>