@page
@model Petroleum_Materials_Transport_Office_System.Pages.Finance.InvoicesModel
@{
    Layout = null;
    ViewData["Title"] = "الفواتير";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --navy: #2F4156;
            --teal: #567C8D;
            --beige: #F5EFEB;
            --sky-blue: #C8D9E6;
            --white: #FFFFFF;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        body {
            background-color: var(--sky-blue);
            font-family: 'Cairo', sans-serif;
            margin: 0;
            padding: 20px;
            direction: rtl;
        }

        .main-wrapper {
            background: linear-gradient(135deg, var(--teal) 0%, #4a6b7c 100%);
            padding: 25px 25px 0 25px; /* Removed bottom padding to let card sit flush if needed */
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            min-height: 85vh;
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
        }

        /* --- Tabs Container --- */
        .tabs-nav {
            display: flex;
            gap: 5px; /* Small gap between tabs */
            padding-right: 0; /* Align perfectly with the right edge */
            margin-bottom: 0;
            position: relative;
            z-index: 10; /* Tabs sit above the card */
            align-items: flex-end; /* Align tabs to the bottom of the container */
        }

        /* --- Individual Tab Link --- */
        .tab-link {
            background-color: rgba(255,255,255,0.7);
            border: none;
            padding: 12px 30px;
            font-size: 15px;
            font-weight: 700;
            color: var(--navy);
            border-radius: 12px 12px 0 0; /* Rounded top corners */
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 0;
        }

            .tab-link:hover {
                background-color: var(--white);
                transform: translateY(-2px);
            }

            /* --- Active Tab Styling (The Merge Effect) --- */
            .tab-link.active-tab {
                background-color: var(--beige); /* Must match Content Card exactly */
                color: var(--navy);
                /* Key to merging: */
                padding-bottom: 20px; /* Extend padding down */
                margin-bottom: -10px; /* Pull tab down INTO the card */

                border-radius: 12px 12px 0 0; /* Keep top rounded, bottom square */
                z-index: 20; /* Higher than content card */
                position: relative;
                box-shadow: 0 -5px 10px rgba(0,0,0,0.05); /* Shadow only on top */
            }

                .tab-link.active-tab::after {
                    content: '';
                    position: absolute;
                    bottom: -5px;
                    left: 0;
                    right: 0;
                    height: 10px;
                    background-color: var(--beige); /* Cover any seam */
                    z-index: 25;
                }

        /* --- Content Card --- */
        .content-card {
            background-color: var(--beige);
            padding: 35px;
            /* In RTL, the first tab is on the Right.
                       We make the Top-Right corner Sharp (0px) to merge with the tab. */
            border-radius: 20px 0 20px 20px;
            min-height: 600px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            position: relative;
            z-index: 5; /* Lower than active tab */
            margin-top: -1px; /* Ensure physical touch */
        }

        /* --- Rest of Styles (Table, Headers) --- */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            border-bottom: 2px solid rgba(47, 65, 86, 0.1);
            padding-bottom: 15px;
        }

        .section-title {
            color: var(--navy);
            margin: 0;
            font-weight: 800;
            font-size: 26px;
        }

            .section-title i {
                margin-left: 10px;
                color: var(--teal);
            }

        .btn-print {
            background-color: var(--navy);
            color: var(--white);
            padding: 10px 25px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            box-shadow: var(--shadow);
        }

            .btn-print:hover {
                background-color: #1e2b3a;
                transform: translateY(-2px);
            }

        .table-responsive {
            overflow-x: auto;
            border-radius: 12px;
            box-shadow: var(--shadow);
            border: 1px solid #d1d9e6;
        }

        .custom-table {
            width: 100%;
            border-collapse: collapse;
            background-color: var(--white);
            min-width: 1200px;
        }

            .custom-table th {
                background-color: var(--navy);
                color: var(--white);
                padding: 15px;
                text-align: center;
            }

            .custom-table td {
                padding: 12px;
                border-bottom: 1px solid #eee;
                text-align: center;
                color: #444;
            }

            .custom-table tr:hover td {
                background-color: #f0f7fa;
            }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .status-paid {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }

        .action-btn {
            color: var(--teal);
            background: rgba(86, 124, 141, 0.1);
            padding: 6px 15px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
        }

            .action-btn:hover {
                background-color: var(--teal);
                color: white;
            }
    </style>
</head>
<body>

    <div class="main-wrapper">
        <div class="tabs-nav">
            <a href="/Finance/Invoices" class="tab-link active-tab"><i class="fa-solid fa-file-invoice"></i> الفواتير</a>
            <a href="/Finance/Payments" class="tab-link"><i class="fa-solid fa-money-bill-wave"></i> المدفوعات</a>
            <a href="/Finance/Expenses" class="tab-link"><i class="fa-solid fa-wallet"></i> المصروفات</a>
            <a href="/Finance/Reports" class="tab-link"><i class="fa-solid fa-chart-pie"></i> التقارير</a>
        </div>

        <div class="content-card">
            <div class="page-header">
                <h2 class="section-title"><i class="fa-solid fa-list-check"></i> فواتير النظام</h2>
                <button class="btn-print" onclick="window.print()"><i class="fa-solid fa-print"></i> طباعة القائمة</button>
            </div>

            <div class="table-responsive">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>رقم الفاتورة</th>
                            <th>العميل</th>
                            <th>المقاول</th>
                            <th>الوقود</th>
                            <th>التاريخ</th>
                            <th>الموقع</th>
                            <th>مبلغ الشركة</th>
                            <th>مبلغ المقاول</th>
                            <th>الصافي</th>
                            <th>الحالة</th>
                            <th>إجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td><strong>INV-001</strong></td>
                            <td>شركة الأهرام</td>
                            <td>النقل السريع</td>
                            <td>ديزل</td>
                            <td>2024-12-01</td>
                            <td>القاهرة</td>
                            <td>50,000</td>
                            <td>45,000</td>
                            <td style="color:var(--navy); font-weight:bold;">5,000</td>
                            <td><span class="status-badge status-paid"><i class="fa-solid fa-check"></i> مدفوع</span></td>
                            <td><a href="#" class="action-btn">عرض</a></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td><strong>INV-002</strong></td>
                            <td>مصنع الحديد</td>
                            <td>الدولي للنقل</td>
                            <td>بنزين 95</td>
                            <td>2024-12-05</td>
                            <td>الإسكندرية</td>
                            <td>120,000</td>
                            <td>110,000</td>
                            <td style="color:var(--navy); font-weight:bold;">10,000</td>
                            <td><span class="status-badge status-pending"><i class="fa-solid fa-clock"></i> معلق</span></td>
                            <td><a href="#" class="action-btn">عرض</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>