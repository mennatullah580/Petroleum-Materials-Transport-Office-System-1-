@page
@model Petroleum_Materials_Transport_Office_System.Pages.Finance.InvoicesModel
@{
    Layout = null;
    ViewData["Title"] = "الفواتير";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --navy: #2F4156;
            --teal: #567C8D;
            --beige: #F5EFEB;
            --sky-blue: #C8D9E6;
            --white: #FFFFFF;
        }

        body {
            background-color: var(--sky-blue);
            font-family: 'Cairo', sans-serif;
            margin: 0;
            padding: 20px;
            direction: rtl;
        }

        .main-wrapper {
            background: linear-gradient(135deg, var(--teal) 0%, #4a6b7c 100%);
            padding: 25px 25px 0 25px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            min-height: 85vh;
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
        }

        /* Tabs Style */
        .tabs-nav {
            display: flex;
            gap: 5px;
            padding-right: 0;
            margin-bottom: 0;
            position: relative;
            z-index: 10;
            align-items: flex-end;
        }

        .tab-link {
            background-color: rgba(255,255,255,0.7);
            border: none;
            padding: 12px 30px;
            font-weight: 700;
            color: var(--navy);
            border-radius: 12px 12px 0 0;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: 0.3s;
        }

            .tab-link:hover {
                background-color: var(--white);
                transform: translateY(-2px);
            }

            .tab-link.active-tab {
                background-color: var(--beige);
                color: var(--navy);
                padding-bottom: 20px;
                margin-bottom: -10px;
                z-index: 20;
                position: relative;
                box-shadow: 0 -5px 10px rgba(0,0,0,0.05);
            }

        /* Content Card */
        .content-card {
            background-color: var(--beige);
            padding: 35px;
            border-radius: 20px;
            min-height: 600px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            position: relative;
            z-index: 5;
            margin-top: -1px;
        }

        /* Header & Actions */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .page-title {
            font-size: 24px;
            font-weight: 800;
            color: var(--navy);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn-print {
            background-color: var(--navy);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            font-family: 'Cairo';
            font-weight: bold;
            transition: 0.2s;
        }

            .btn-print:hover {
                background-color: #1a2633;
            }

        /* Table Styling */
        .table-container {
            overflow-x: auto;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1000px;
        }

        thead {
            background-color: var(--navy);
            color: white;
        }

        th {
            padding: 15px;
            text-align: center;
            font-weight: 600;
            font-size: 14px;
            white-space: nowrap;
        }

        td {
            padding: 12px 15px;
            border-bottom: 1px solid #eee;
            text-align: center;
            color: #333;
            font-size: 14px;
        }

        tr:last-child td {
            border-bottom: none;
        }

        tr:hover {
            background-color: #f9f9f9;
        }

        /* Status Badges */
        .badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
            display: inline-block;
            min-width: 80px;
        }

        .status-paid {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .status-unpaid {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }

        .status-failed {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        /* Action Buttons */
        .btn-view {
            background-color: #e2e6ea;
            color: var(--navy);
            border: none;
            padding: 5px 15px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 13px;
            font-weight: bold;
            transition: 0.2s;
            font-family: 'Cairo';
        }

            .btn-view:hover {
                background-color: var(--teal);
                color: white;
            }

        .num {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 600;
        }

        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: white;
            padding: 30px;
            border-radius: 15px;
            width: 500px;
            max-width: 90%;
            box-shadow: 0 15px 30px rgba(0,0,0,0.3);
            position: relative;
            animation: slideIn 0.3s ease;
        }

        @@keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal-header {
            text-align: center;
            border-bottom: 2px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 20px;
        }

        .modal-title {
            color: var(--navy);
            font-size: 20px;
            font-weight: bold;
        }

        .close-modal {
            position: absolute;
            left: 20px;
            top: 20px;
            cursor: pointer;
            font-size: 20px;
            color: #777;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 12px;
            padding-bottom: 8px;
            border-bottom: 1px dashed #eee;
        }

        .detail-label {
            font-weight: bold;
            color: var(--teal);
        }

        .detail-value {
            font-weight: 600;
            color: #333;
        }

        /* Print Styles */
        @@media print {
            body {
                background-color: white;
                padding: 0;
            }

            .main-wrapper {
                box-shadow: none;
                padding: 0;
                margin: 0;
                background: none;
            }

            .tabs-nav, .btn-print, .btn-view, .page-title i {
                display: none !important;
            }

            .content-card {
                box-shadow: none;
                padding: 0;
                border: none;
            }

            .table-container {
                box-shadow: none;
                border: 1px solid #ddd;
            }

            table {
                border: 1px solid #ddd;
            }

            th {
                background-color: #eee !important;
                color: black !important;
                border: 1px solid #ddd;
            }

            td {
                border: 1px solid #ddd;
            }

            .page-title {
                text-align: center;
                width: 100%;
                margin-bottom: 20px;
                font-size: 28px;
            }

            .badge {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }

            .modal-overlay {
                display: none !important;
            }
        }
    </style>
</head>
<body>

    <div class="main-wrapper">
        <div class="tabs-nav">
            <a href="/Finance/Invoices" class="tab-link active-tab"><i class="fa-solid fa-file-invoice"></i> الفواتير</a>
            <a href="/Finance/Payments" class="tab-link"><i class="fa-solid fa-money-bill-wave"></i> المدفوعات</a>
            <a href="/Finance/Expenses" class="tab-link"><i class="fa-solid fa-wallet"></i> المصروفات</a>
            <a href="/Finance/Reports" class="tab-link"><i class="fa-solid fa-chart-pie"></i> التقارير</a>
        </div>

        <div class="content-card">

            <div class="page-header">
                <div class="page-title"><i class="fa-solid fa-list-check"></i> فواتير النظام</div>
                <button class="btn-print" onclick="window.print()"><i class="fa-solid fa-print"></i> طباعة القائمة</button>
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>رقم الفاتورة</th>
                            <th>العميل</th>
                            <th>المقاول</th>
                            <th>الوقود</th>
                            <th>التاريخ</th>
                            <th>الموقع</th>
                            <th>مبلغ الشركة</th>
                            <th>مبلغ المقاول</th>
                            <th>الصافي</th>
                            <th>الحالة</th>
                            <th>إجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.InvoicesList != null && Model.InvoicesList.Count > 0)
                        {
                            int i = 1;
                            foreach (var item in Model.InvoicesList)
                            {
                                <tr>
                                    <td class="num">@i</td>
                                    <td class="num">@item.InvoiceNumber</td>
                                    <td>@item.ClientName</td>
                                    <td>@item.ProviderName</td>
                                    <td>@item.FuelType</td>
                                    <td class="num">@item.Date.ToString("yyyy-MM-dd")</td>
                                    <td>@item.Location</td>
                                    <td class="num">@item.CompanyAmount.ToString("N0")</td>
                                    <td class="num">@item.ProviderAmount.ToString("N0")</td>
                                    <td class="num" style="color: var(--teal); font-weight: bold;">@item.NetAmount.ToString("N0")</td>
                                    <td>
                                        @if (item.Status == "Paid")
                                        {
                                            <span class="badge status-paid"><i class="fa-solid fa-check"></i> مدفوع</span>
                                        }
                                        else if (item.Status == "Unpaid" || item.Status == "Pending")
                                        {
                                            <span class="badge status-unpaid"><i class="fa-solid fa-clock"></i> معلق</span>
                                        }
                                        else
                                        {
                                            <span class="badge status-failed">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn-view"
                                                onclick="openModal('@item.InvoiceNumber', '@item.ClientName', '@item.ProviderName', '@item.NetAmount.ToString("N0")', '@item.Status')">
                                            عرض
                                        </button>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="12" style="padding: 30px; color: #777;">لا توجد بيانات للعرض</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="invoiceModal" class="modal-overlay">
        <div class="modal-content">
            <span class="close-modal" onclick="closeModal()">&times;</span>
            <div class="modal-header">
                <div class="modal-title">تفاصيل الفاتورة <span id="m_invNum" class="num"></span></div>
            </div>
            <div class="modal-body">
                <div class="detail-row">
                    <span class="detail-label">العميل:</span>
                    <span class="detail-value" id="m_client"></span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">المقاول:</span>
                    <span class="detail-value" id="m_provider"></span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">صافي المبلغ:</span>
                    <span class="detail-value num" id="m_amount"></span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">حالة الدفع:</span>
                    <span class="detail-value" id="m_status"></span>
                </div>

                <div style="text-align: center; margin-top: 25px;">
                    <button onclick="window.print()" class="btn-print" style="display: inline-flex; width: auto;">طباعة التفاصيل</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function openModal(invNum, client, provider, amount, status) {
            document.getElementById('m_invNum').innerText = invNum;
            document.getElementById('m_client').innerText = client;
            document.getElementById('m_provider').innerText = provider;
            document.getElementById('m_amount').innerText = amount + ' ج.م';

            let statusText = status;
            if (status === 'Paid') statusText = 'مدفوع بالكامل';
            if (status === 'Unpaid' || status === 'Pending') statusText = 'معلق / غير مدفوع';

            document.getElementById('m_status').innerText = statusText;

            document.getElementById('invoiceModal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('invoiceModal').style.display = 'none';
        }

        window.onclick = function(event) {
            if (event.target == document.getElementById('invoiceModal')) {
                closeModal();
            }
        }
    </script>

</body>
</html>